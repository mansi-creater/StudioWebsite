@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/StudioLayout.cshtml";
}

<script src="~/js/contact.js"></script>

<style>
    .msg {     
        color: red;       
        font-size: 14px;
    }
    #success {
        color: red;    
        font-size: 20px;
        margin-left: 20px;
        font-weight: 500;
        font-family: cursive;
    }
</style>
<!-- breadcrumb start-->
<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner text-center">
                    <div class="breadcrumb_iner_item">
                        <h2>contact</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="contact-section section_padding">
    <div class="container">
        <div class="row" style="padding-top: 12px; background: #e1dede;">
            <div class="col-12">
                <h2 class="contact-title">Get in Touch</h2>
            </div>
            <div class="col-lg-8">
                <div class="form-contact contact_form" id="form">

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <input class="form-control" name="name" id="name" type="text" placeholder='Enter your name' required autocomplete="off">
                                <span id="m1" class="msg"></span>                             
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <input class="form-control" name="phone" id="phoneno" type="tel" placeholder='Enter your phone number' required autocomplete="off" maxlength="10">
                                <span id="msg" class="msg">Please Enter 10 digit mobile number</span>
                                <span id="msg1" class="msg">Please Enter digit only</span>
                                <span id="m2" class="msg"></span>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <input class="form-control" name="email" id="email" type="email" placeholder='Enter email address' required autocomplete="off" onkeydown="validation()">
                                <span id="lblError3" class="msg"></span>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <input class="form-control" name="city" id="city" type="text" placeholder='Enter your city' autocomplete="off">
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <input class="form-control" name="state" id="state" type="text" placeholder='Enter your state' autocomplete="off">
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <input class="form-control" name="event" id="event" type="text" placeholder='Enter your event name' required autocomplete="off">
                                <span id="m3" class="msg"></span>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-group">
                                <textarea class="form-control w-100" name="message" id="message" cols="30" rows="5" placeholder='Enter Message' autocomplete="off"></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="button-contactForm btn_2" onclick="savedetails();">Send Message </button>
                        <label id="success">Your Enqiury has been Registered Successfully !!!!!!!</label>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                @*<div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-home"></i></span>
                    <div class="media-body">
                        <h3>Buttonwood, California.</h3>
                        <p>Rosemead, CA 91770</p>
                    </div>
                </div>*@
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-tablet"></i></span>
                    <div class="media-body">
                        <h3>7073224428</h3>
                        <p>Mon to Sun 9am to 7pm</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-email"></i></span>
                    <div class="media-body">
                        <h3>xyz@gmail.com</h3>
                        <p>Send us your query anytime!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
<script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

<script>

    $(document).ready(function () {
        $("#msg").hide();
        $("#msg1").hide();
        $("#success").hide();

        $("#phoneno").on("input", function () {
            var mobNum = $(this).val();
            var filter = /^\d*(?:\.\d{1,2})?$/;

            if (filter.test(mobNum)) {
                if (mobNum.length == 10) {
                    $("#msg").hide();
                    $("#msg1").hide();
                } else {
                    $("#msg").show();
                    $("#msg1").hide();
                    return false;
                }
            }
            else {
                $("#msg1").show();
                $("#msg").hide();
                return false;
            }
        });
           
    });


</script>
